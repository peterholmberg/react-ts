{
  "moduleFileExtensions": [
    "jsx",
    "js"
  ],
  "roots": ["src"],
  "modulePaths": ["src/app"],
  "collectCoverageFrom" : ["src/**/*.jsx", "src/**/*.js", "!src/**/index.js", "!src/server/mock/**"],
  "moduleDirectories": ["node_modules"],
  "moduleNameMapper": {
    "\\.scss$": "<rootDir>/src/components/__mocks__/styleMock.js"
  },
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "setupFiles": [
    "./scripts/shim.js",
    "./test-setup.js"
  ]
}
